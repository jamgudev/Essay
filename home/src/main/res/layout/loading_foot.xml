<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_footer_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_item_bg"
    android:gravity="center"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ProgressBar
        android:id="@+id/footer_search_progress"
        style="?android:attr/progressBarStyleSmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:indeterminateDrawable="@drawable/progressbar_interminate" />

    <TextView
        android:id="@+id/footer_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/footer_search_progress"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="正在加载..."
        android:textColor="@color/c31"
        android:textSize="14sp" />

</RelativeLayout>